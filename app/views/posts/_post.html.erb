<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <img src="<%= post.image %>", style='height:50px;width:50px;margin-bottom:20px;'>
  </p>

  <%# <%= link_to "Viewpdf" ,posts_pdf_path(post) %>
  <%= link_to "Download" ,posts_path(format: 'pdf') %><br/>
  <%= link_to "Preview" ,posts_path(format: 'pdf') %>
</div>
